<configuration>

<!-- Namenode Setup -->
<property><name>dfs.namenode.name.dir</name><value>/hadoopdata/namenode</value></property>

<!-- Datanode Setup -->
<property><name>dfs.datanode.data.dir</name><value>/hadoopdata/datanode</value></property>
<property><name>dfs.replication</name><value>3</value></property>

<!-- Cluster Setup -->
<property><name>dfs.nameservices</name><value>mycluster</value></property>
<property><name>dfs.namenode.rpc-address.mycluster.namenode1</name><value>namenode1:8020</value></property>
<property><name>dfs.namenode.rpc-address.mycluster.namenode2</name><value>namenode2:8020</value></property>
<property><name>dfs.ha.namenodes.mycluster</name><value>namenode1,namenode2</value></property>

<!-- QJM Setup -->
<property><name>dfs.namenode.shared.edits.dir</name><value>qjournal://journalnode1:8485;journalnode2:8485;journalnode3:8485/mycluster</value></property>
<property><name>dfs.journalnode.edits.dir</name><value>/hadoopdata/journalnode</value></property>
<property><name>dfs.namenode.edits.journal-plugin.journalnode1</name><value>org.apache.hadoop.hdfs.qjournal.client.QuorumJournalManager</value></property>
<property><name>dfs.namenode.edits.journal-plugin.journalnode2</name><value>org.apache.hadoop.hdfs.qjournal.client.QuorumJournalManager</value></property>
<property><name>dfs.namenode.edits.journal-plugin.journalnode3</name><value>org.apache.hadoop.hdfs.qjournal.client.QuorumJournalManager</value></property>

<!-- Failover proxy specification -->
<property><name>dfs.client.failover.proxy.provider.mycluster</name><value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value></property>

<!-- Automatic failover - Zookeeper Setup -->
<property><name>dfs.ha.automatic-failover.enabled</name><value>true</value></property>
<property><name>ha.zookeeper.quorum</name><value>zookeeper1:2181,zookeeper2:2181,zookeeper3:2181</value></property>
<property><name>dfs.ha.fencing.methods</name><value>shell(fencing-script.sh namenode1)</value></property>

</configuration>